---
// Analytics компонент с Partytown и Cookie Consent интеграцией
// Загружается только после согласия пользователя на cookies
---

<script>
  (function() {
    // Проверяем согласие на cookies
    const consent = localStorage.getItem('cookie-consent');
    if (consent !== 'accepted') {
      // Ждём события согласия
      document.addEventListener('cookie-consent-accepted', initAnalytics);
      return;
    }
    
    // Если уже есть согласие, инициализируем сразу
    initAnalytics();
    
    function initAnalytics() {
      // Yandex Metrika через Partytown
      // ⚠️ Замените YOUR_COUNTER_ID на реальный ID счётчика
      const counterId = 'YOUR_COUNTER_ID';
      
      if (!counterId || counterId === 'YOUR_COUNTER_ID') {
        console.warn('Analytics: Counter ID not configured');
        return;
      }
      
      // Создаём скрипт для Partytown
      const script = document.createElement('script');
      script.type = 'text/partytown';
      script.innerHTML = `
        (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
        m[i].l=1*new Date();k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
        (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");
        
        ym(${counterId}, "init", {
          clickmap: true,
          trackLinks: true,
          accurateTrackBounce: true,
          webvisor: true
        });
      `;
      document.head.appendChild(script);
      
      // Noscript fallback для Yandex Metrika
      const noscript = document.createElement('noscript');
      noscript.innerHTML = `<div><img src="https://mc.yandex.ru/watch/${counterId}" style="position:absolute; left:-9999px;" alt="" /></div>`;
      document.body.appendChild(noscript);
    }
    
    // SPA-трекинг для View Transitions
    document.addEventListener('astro:page-load', () => {
      // Обновляем страницу в аналитике при навигации
      const counterId = 'YOUR_COUNTER_ID';
      if (counterId && counterId !== 'YOUR_COUNTER_ID') {
        try {
          // @ts-ignore - Yandex Metrika типы не доступны
          if (window.ym && typeof window.ym === 'function') {
            // @ts-ignore
            window.ym(counterId, 'hit', window.location.href);
          }
        } catch (e) {
          console.warn('Analytics: Error tracking page view', e);
        }
      }
    });
  })();
</script>
