      // –û—á–∏—Å—Ç–∏—Ç—å —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ –æ–ø—Ü–∏–∏ (–∫—Ä–æ–º–µ "–í—Å–µ —Ç–µ–≥–∏")
      while (tagsSelect.options.length > 1) {
        tagsSelect.remove(1);
      }
      
      allTags.forEach(tag => {
        const option = document.createElement('option');
        option.value = tag;
        option.textContent = tag;
        tagsSelect.appendChild(option);
      });
      
      renderGraph(allData);
    } catch (error) {
