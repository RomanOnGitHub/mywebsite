---
import Layout from '@/layouts/Layout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import { SUPPORTED_LOCALES, type Locale, filterByLang, getLocalizedPath } from '@/utils/slugs';
import { getCollection, type CollectionEntry } from 'astro:content';
import { parseLeafBundleId } from '@/utils/slugs';
import HeroImage from '@/components/HeroImage.astro';

interface Props {
  lang: Locale;
}

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map(lang => ({ 
    params: { lang } 
  }));
}

const { lang } = Astro.params as Props;

// Получаем все кейсы
let allCases: CollectionEntry<'cases'>[] = [];

try {
  allCases = await getCollection('cases');
} catch (error) {
  Astro.logger.error(`Error loading cases collection for lang ${lang}:`, error);
}

// Фильтруем по языку
const cases = filterByLang(allCases, lang);
---

<Layout 
  title="Кейсы" 
  description="Примеры наших работ и проектов"
  lang={lang}
>
  <div class="max-w-7xl p-6 md:p-8 lg:p-12">
    <Breadcrumbs title="Кейсы" lang={lang} />
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Кейсы</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Примеры наших работ и успешных проектов
      </p>
    </header>

    {cases.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {cases.map(caseItem => {
          const { slug } = parseLeafBundleId(caseItem.id);
          return (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <a href={getLocalizedPath(`cases/${slug}/`, lang)} data-astro-prefetch>
                {caseItem.data.heroImage && (
                  <HeroImage 
                    image={caseItem.data.heroImage} 
                    alt={caseItem.data.title}
                    width={400}
                    height={250}
                  />
                )}
                <div class="p-6">
                  <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {caseItem.data.title}
                  </h2>
                  <p class="text-gray-600 dark:text-gray-400 line-clamp-3">
                    {caseItem.data.description}
                  </p>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Пока нет кейсов на этом языке.
        </p>
      </div>
    )}
  </div>
</Layout>
