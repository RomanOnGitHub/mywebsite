---
import Layout from '@/layouts/Layout.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { SUPPORTED_LOCALES, type Locale, filterByLang, getLocalizedPath } from '@/utils/slugs';
import { getCollection, type CollectionEntry } from 'astro:content';
import { parseLeafBundleId } from '@/utils/slugs';
import HeroImage from '@/components/sections/HeroImage.astro';
import { POSTS_PER_PAGE } from '@/consts';

interface Props {
  lang: Locale;
}

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map(lang => ({ 
    params: { lang } 
  }));
}

const { lang } = Astro.params as Props;

// Получаем все записи блога
let allPosts: CollectionEntry<'blog'>[] = [];

try {
  allPosts = await getCollection('blog');
} catch (error) {
  Astro.logger.error(`Error loading blog collection for lang ${lang}:`, error);
}

// Фильтруем по языку и сортируем по дате
const posts = filterByLang(allPosts, lang)
  .filter(post => post.data.pubDate)
  .sort((a, b) => b.data.pubDate!.getTime() - a.data.pubDate!.getTime());

// Пагинация (если нужно)
const currentPage = 1;
const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
const endIndex = startIndex + POSTS_PER_PAGE;
const paginatedPosts = posts.slice(startIndex, endIndex);
const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);
---

<Layout 
  title="Блог" 
  description="Статьи и материалы блога"
  lang={lang}
>
  <div class="max-w-7xl p-6 md:p-8 lg:p-12">
    <Breadcrumbs title="Блог" lang={lang} />
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Блог</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Статьи и материалы о наших проектах и исследованиях
      </p>
    </header>

    {paginatedPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {paginatedPosts.map(post => {
          const { slug } = parseLeafBundleId(post.id);
          return (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <a href={getLocalizedPath(`blog/${slug}/`, lang)} data-astro-prefetch>
                {post.data.heroImage && (
                  <HeroImage 
                    image={post.data.heroImage} 
                    alt={post.data.title}
                    width={400}
                    height={250}
                  />
                )}
                <div class="p-6">
                  <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                    {post.data.description}
                  </p>
                  <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString(lang === 'ru' ? 'ru-RU' : lang, {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex gap-2">
                        {post.data.tags.slice(0, 2).map(tag => (
                          <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded text-xs">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Пока нет записей в блоге на этом языке.
        </p>
      </div>
    )}

    {totalPages > 1 && (
      <nav class="mt-8 flex justify-center gap-2">
        {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
          <a
            href={page === 1 ? getLocalizedPath('blog/', lang) : getLocalizedPath(`blog/page/${page}/`, lang)}
            class={`px-4 py-2 rounded-md ${
              page === currentPage
                ? 'bg-blue-600 text-white'
                : 'bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600'
            } transition-colors`}
            data-astro-prefetch
          >
            {page}
          </a>
        ))}
      </nav>
    )}
  </div>
</Layout>
