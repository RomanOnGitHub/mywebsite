---
import Layout from '@/layouts/Layout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import { SUPPORTED_LOCALES, type Locale, filterByLang, getLocalizedPath } from '@/utils/slugs';
import { getCollection, type CollectionEntry } from 'astro:content';
import { parseLeafBundleId } from '@/utils/slugs';
import HeroImage from '@/components/HeroImage.astro';

interface Props {
  lang: Locale;
}

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map(lang => ({ 
    params: { lang } 
  }));
}

const { lang } = Astro.params as Props;

// Получаем все отрасли
let allIndustries: CollectionEntry<'industries'>[] = [];

try {
  allIndustries = await getCollection('industries');
} catch (error) {
  Astro.logger.error(`Error loading industries collection for lang ${lang}:`, error);
}

// Фильтруем по языку
const industries = filterByLang(allIndustries, lang);
---

<Layout 
  title="Отрасли" 
  description="Отрасли, в которых мы работаем"
  lang={lang}
>
  <div class="max-w-7xl mx-auto">
    <Breadcrumbs title="Отрасли" lang={lang} />
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Отрасли</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Отрасли, в которых мы имеем опыт и экспертизу
      </p>
    </header>

    {industries.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {industries.map(industry => {
          const { slug } = parseLeafBundleId(industry.id);
          return (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <a href={getLocalizedPath(`industries/${slug}/`, lang)} data-astro-prefetch>
                {industry.data.heroImage && (
                  <HeroImage 
                    image={industry.data.heroImage} 
                    alt={industry.data.title}
                    width={400}
                    height={250}
                  />
                )}
                <div class="p-6">
                  <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {industry.data.title}
                  </h2>
                  <p class="text-gray-600 dark:text-gray-400 line-clamp-3">
                    {industry.data.description}
                  </p>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Пока нет отраслей на этом языке.
        </p>
      </div>
    )}
  </div>
</Layout>
