---
import Layout from '@/layouts/Layout.astro';
import { SUPPORTED_LOCALES, type Locale } from '@/utils/slugs';
import { getCollection } from 'astro:content';
import { parseLeafBundleId } from '@/utils/slugs';

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map(lang => ({ 
    params: { lang } 
  }));
}

const { lang } = Astro.params as { lang: Locale };

// Получаем записи и фильтруем по языку
const [allBlogPosts, allCases, allServices, allIndustries] = await Promise.all([
  getCollection('blog'),
  getCollection('cases'),
  getCollection('services'),
  getCollection('industries'),
]);

// Фильтруем по языку
const blogPosts = allBlogPosts
  .filter(post => {
    const { lang: postLang } = parseLeafBundleId(post.id);
    return postLang === lang;
  })
  .filter(post => post.data.pubDate)
  .sort((a, b) => b.data.pubDate!.getTime() - a.data.pubDate!.getTime())
  .slice(0, 5);

const cases = allCases
  .filter(caseItem => {
    const { lang: caseLang } = parseLeafBundleId(caseItem.id);
    return caseLang === lang;
  })
  .slice(0, 5);

const services = allServices
  .filter(service => {
    const { lang: serviceLang } = parseLeafBundleId(service.id);
    return serviceLang === lang;
  })
  .slice(0, 5);

const industries = allIndustries
  .filter(industry => {
    const { lang: industryLang } = parseLeafBundleId(industry.id);
    return industryLang === lang;
  })
  .slice(0, 5);
---

<Layout 
  title="Главная страница" 
  description="Система связей и граф знаний"
  lang={lang}
>
  <div class="max-w-7xl mx-auto">
    <!-- Hero Section -->
    <section class="text-center py-16 mb-12">
      <h1 class="text-5xl font-bold mb-4">Добро пожаловать</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Исследуйте связи между материалами через граф знаний
      </p>
      
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={`/${lang}/graph/`}
          class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors font-medium"
        >
          Граф знаний
        </a>
        <a
          href={`/${lang}/blog/`}
          class="px-6 py-3 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 rounded-md transition-colors font-medium"
        >
          Блог
        </a>
      </div>
    </section>
    
    <!-- Latest Content -->
    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {blogPosts.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Последние записи блога</h2>
          <ul class="space-y-2">
            {blogPosts.map(post => {
              const { slug } = parseLeafBundleId(post.id);
              return (
                <li>
                  <a 
                    href={`/${lang}/blog/${slug}/`}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {post.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
      
      {cases.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Кейсы</h2>
          <ul class="space-y-2">
            {cases.map(caseItem => {
              const { slug } = parseLeafBundleId(caseItem.id);
              return (
                <li>
                  <a 
                    href={`/${lang}/cases/${slug}/`}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {caseItem.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
      
      {services.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Услуги</h2>
          <ul class="space-y-2">
            {services.map(service => {
              const { slug } = parseLeafBundleId(service.id);
              return (
                <li>
                  <a 
                    href={`/${lang}/services/${slug}/`}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {service.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
      
      {industries.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Отрасли</h2>
          <ul class="space-y-2">
            {industries.map(industry => {
              const { slug } = parseLeafBundleId(industry.id);
              return (
                <li>
                  <a 
                    href={`/${lang}/industries/${slug}/`}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {industry.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
    </section>
    
    <!-- Quick Links -->
    <section class="text-center">
      <h2 class="text-3xl font-bold mb-6">Разделы сайта</h2>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={`/${lang}/blog/`} class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors">
          Блог
        </a>
        <a href={`/${lang}/cases/`} class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-md transition-colors">
          Кейсы
        </a>
        <a href={`/${lang}/services/`} class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white rounded-md transition-colors">
          Услуги
        </a>
        <a href={`/${lang}/industries/`} class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors">
          Отрасли
        </a>
        <a href={`/${lang}/graph/`} class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-md transition-colors">
          Граф знаний
        </a>
      </div>
    </section>
  </div>
</Layout>
