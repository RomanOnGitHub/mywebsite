---
import Layout from '@/layouts/Layout.astro';
import { SUPPORTED_LOCALES, type Locale, filterByLang, getLocalizedPath } from '@/utils/slugs';
import { getCollection, type CollectionEntry } from 'astro:content';
import { parseLeafBundleId } from '@/utils/slugs';

export function getStaticPaths() {
  return SUPPORTED_LOCALES.map(lang => ({ 
    params: { lang } 
  }));
}

const { lang } = Astro.params as { lang: Locale };

// Получаем записи и фильтруем по языку
let allBlogPosts: CollectionEntry<'blog'>[] = [];
let allCases: CollectionEntry<'cases'>[] = [];
let allServices: CollectionEntry<'services'>[] = [];
let allIndustries: CollectionEntry<'industries'>[] = [];

try {
  [allBlogPosts, allCases, allServices, allIndustries] = await Promise.all([
    getCollection('blog'),
    getCollection('cases'),
    getCollection('services'),
    getCollection('industries'),
  ]);
} catch (error) {
  Astro.logger.error(`Error loading collections for lang ${lang}:`, error);
  // Продолжаем с пустыми массивами, страница отобразится без контента
}

// Фильтруем по языку
const blogPosts = filterByLang(allBlogPosts, lang)
  .filter(post => post.data.pubDate)
  .sort((a, b) => b.data.pubDate!.getTime() - a.data.pubDate!.getTime())
  .slice(0, 5);

const cases = filterByLang(allCases, lang).slice(0, 5);

const services = filterByLang(allServices, lang).slice(0, 5);

const industries = filterByLang(allIndustries, lang).slice(0, 5);
---

<Layout 
  title="Главная страница" 
  description="Система связей и граф знаний"
  lang={lang}
>
  <div class="max-w-7xl mx-auto">
    <!-- Hero Section -->
    <section class="text-center py-16 mb-12">
      <h1 class="text-5xl font-bold mb-4">Добро пожаловать</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Исследуйте связи между материалами через граф знаний
      </p>
      
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={getLocalizedPath('graph/', lang)}
          data-astro-prefetch
          class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors font-medium"
        >
          Граф знаний
        </a>
        <a
          href={getLocalizedPath('blog/', lang)}
          data-astro-prefetch
          class="px-6 py-3 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 rounded-md transition-colors font-medium"
        >
          Блог
        </a>
      </div>
    </section>
    
    <!-- Latest Content -->
    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {blogPosts.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Последние записи блога</h2>
          <ul class="space-y-2">
            {blogPosts.map(post => {
              const { slug } = parseLeafBundleId(post.id);
              return (
                <li>
                  <a 
                    href={getLocalizedPath(`blog/${slug}/`, lang)}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {post.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
      
      {cases.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Кейсы</h2>
          <ul class="space-y-2">
            {cases.map(caseItem => {
              const { slug } = parseLeafBundleId(caseItem.id);
              return (
                <li>
                  <a 
                    href={getLocalizedPath(`cases/${slug}/`, lang)}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {caseItem.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
      
      {services.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Услуги</h2>
          <ul class="space-y-2">
            {services.map(service => {
              const { slug } = parseLeafBundleId(service.id);
              return (
                <li>
                  <a 
                    href={getLocalizedPath(`services/${slug}/`, lang)}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {service.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
      
      {industries.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-4">Отрасли</h2>
          <ul class="space-y-2">
            {industries.map(industry => {
              const { slug } = parseLeafBundleId(industry.id);
              return (
                <li>
                  <a 
                    href={getLocalizedPath(`industries/${slug}/`, lang)}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                  >
                    {industry.data.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      )}
    </section>
    
    <!-- Quick Links -->
    <section class="text-center">
      <h2 class="text-3xl font-bold mb-6">Разделы сайта</h2>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={getLocalizedPath('blog/', lang)} data-astro-prefetch class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors">
          Блог
        </a>
        <a href={getLocalizedPath('cases/', lang)} data-astro-prefetch class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-md transition-colors">
          Кейсы
        </a>
        <a href={getLocalizedPath('services/', lang)} data-astro-prefetch class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white rounded-md transition-colors">
          Услуги
        </a>
        <a href={getLocalizedPath('industries/', lang)} data-astro-prefetch class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors">
          Отрасли
        </a>
        <a href={getLocalizedPath('graph/', lang)} data-astro-prefetch class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-md transition-colors">
          Граф знаний
        </a>
      </div>
    </section>
  </div>
</Layout>
