---
import Layout from '@/layouts/Layout.astro';
import { SUPPORTED_LOCALES, getLocalizedPath, parseLeafBundleId, DEFAULT_LOCALE } from '@/utils/slugs';
import { getCollection, type CollectionEntry } from 'astro:content';

// Получаем последние записи для каждого типа контента
let blogPosts: CollectionEntry<'blog'>[] = [];
let cases: CollectionEntry<'cases'>[] = [];
let services: CollectionEntry<'services'>[] = [];
let industries: CollectionEntry<'industries'>[] = [];

try {
  [blogPosts, cases, services, industries] = await Promise.all([
    getCollection('blog'),
    getCollection('cases'),
    getCollection('services'),
    getCollection('industries'),
  ]);
} catch (error) {
  Astro.logger.error('Error loading collections:', error);
  // Продолжаем с пустыми массивами, страница отобразится без контента
}

// Сортируем по дате публикации (для blog) и берём последние 5
const latestBlog = blogPosts
  .filter(post => post.data.pubDate)
  .sort((a, b) => b.data.pubDate!.getTime() - a.data.pubDate!.getTime())
  .slice(0, 5);

const latestCases = cases.slice(0, 5);
const latestServices = services.slice(0, 5);
const latestIndustries = industries.slice(0, 5);
---

<Layout 
  title="Главная страница" 
  description="Система связей и граф знаний"
  lang="ru"
  hideSidebar={true}
>
  <div class="max-w-7xl p-6 md:p-8 lg:p-12">
    <!-- Hero Section -->
    <section class="text-center py-16 mb-12">
      <h1 class="text-5xl font-bold mb-4">Добро пожаловать</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Исследуйте связи между материалами через граф знаний
      </p>
      
      <!-- Language Selector -->
      <div class="flex flex-wrap justify-center gap-3 mb-8">
        {SUPPORTED_LOCALES.map(locale => (
          <a
            href={`/${locale}/`}
            class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors"
          >
            {locale.toUpperCase()}
          </a>
        ))}
      </div>
      
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={getLocalizedPath('graph/', DEFAULT_LOCALE)}
          data-astro-prefetch
          class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors font-medium"
        >
          Граф знаний
        </a>
        <a
          href={getLocalizedPath('blog/', DEFAULT_LOCALE)}
          data-astro-prefetch
          class="px-6 py-3 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 rounded-md transition-colors font-medium"
        >
          Блог
        </a>
      </div>
    </section>
    
    <!-- Latest Content -->
    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <div>
        <h2 class="text-2xl font-bold mb-4">Последние записи блога</h2>
        <ul class="space-y-2">
          {latestBlog.map(post => {
            const { slug } = parseLeafBundleId(post.id);
            return (
              <li>
                <a 
                  href={getLocalizedPath(`blog/${slug}/`, DEFAULT_LOCALE)}
                  data-astro-prefetch
                  class="text-blue-600 dark:text-blue-400 hover:underline"
                >
                  {post.data.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
      
      <div>
        <h2 class="text-2xl font-bold mb-4">Кейсы</h2>
        <ul class="space-y-2">
          {latestCases.map(caseItem => {
            const { slug } = parseLeafBundleId(caseItem.id);
            return (
              <li>
                <a 
                  href={getLocalizedPath(`cases/${slug}/`, DEFAULT_LOCALE)}
                  data-astro-prefetch
                  class="text-blue-600 dark:text-blue-400 hover:underline"
                >
                  {caseItem.data.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
      
      <div>
        <h2 class="text-2xl font-bold mb-4">Услуги</h2>
        <ul class="space-y-2">
          {latestServices.map(service => {
            const { slug } = parseLeafBundleId(service.id);
            return (
              <li>
                <a 
                  href={getLocalizedPath(`services/${slug}/`, DEFAULT_LOCALE)}
                  data-astro-prefetch
                  class="text-blue-600 dark:text-blue-400 hover:underline"
                >
                  {service.data.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
      
      <div>
        <h2 class="text-2xl font-bold mb-4">Отрасли</h2>
        <ul class="space-y-2">
          {latestIndustries.map(industry => {
            const { slug } = parseLeafBundleId(industry.id);
            return (
              <li>
                <a 
                  href={getLocalizedPath(`industries/${slug}/`, DEFAULT_LOCALE)}
                  data-astro-prefetch
                  class="text-blue-600 dark:text-blue-400 hover:underline"
                >
                  {industry.data.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
    </section>
    
    <!-- Quick Links -->
    <section class="text-center">
      <h2 class="text-3xl font-bold mb-6">Разделы сайта</h2>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={getLocalizedPath('blog/', DEFAULT_LOCALE)} data-astro-prefetch class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors">
          Блог
        </a>
        <a href={getLocalizedPath('cases/', DEFAULT_LOCALE)} data-astro-prefetch class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-md transition-colors">
          Кейсы
        </a>
        <a href={getLocalizedPath('services/', DEFAULT_LOCALE)} data-astro-prefetch class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white rounded-md transition-colors">
          Услуги
        </a>
        <a href={getLocalizedPath('industries/', DEFAULT_LOCALE)} data-astro-prefetch class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors">
          Отрасли
        </a>
        <a href={getLocalizedPath('graph/', DEFAULT_LOCALE)} data-astro-prefetch class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-md transition-colors">
          Граф знаний
        </a>
      </div>
    </section>
  </div>
</Layout>
