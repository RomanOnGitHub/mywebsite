{
  "name": "knowledge-graph-site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.astro --max-warnings 0 || echo 'ESLint not installed, run: npm install -D eslint @typescript-eslint/parser @typescript-eslint/eslint-plugin eslint-plugin-astro'",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro,md,mdx}\" || echo 'Prettier not installed, run: npm install -D prettier'",
    "ci": "npm run typecheck && npm run test && npm run build",
    "audit": "npm audit --production"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/partytown": "^2.1.1",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.1",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.8",
    "astro-icon": "^1.1.1",
    "d3-force": "^3.0.0",
    "force-graph": "^1.43.0",
    "html-to-image": "^1.11.13",
    "rehype-external-links": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "satori": "^0.12.0",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.18",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^4.0.17",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.0.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  }
}
